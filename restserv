from docutils.core import publish_parts
from docutils.writers.html4css1 import Writer
import imp
import os

def rst2html(file_path, mode=None):
  string = open(file_path).read()
  w = Writer()
  (_, path, _) = imp.find_module('template')
  overrides = {
    'stylesheet': os.path.join(path, 'default.css'),
    'stylesheet_path': None,
    'initial_header_level': 2
    }
  r = publish_parts(string, writer=w, settings_overrides=overrides)
  result = r['whole']
  return result.encode('utf-8')

def parse_args():
  from optparse import OptionParser
  p = OptionParser()
  p.add_option("-p", "--port", dest="port", default=8080,
               help="port number")
  return p.parse_args()

if __name__ == '__main__':
  (options, args) = parse_args()

  from BaseHTTPServer import BaseHTTPRequestHandler
  class MyHandler(BaseHTTPRequestHandler):
    def do_GET(self):
      html = rst2html(args[0])
      self.send_response(200)
      self.end_headers()
      self.wfile.write(html)
      return

  from BaseHTTPServer import HTTPServer
  server = HTTPServer(('localhost', options.port), MyHandler)
  print('Access http:://localhost:%i' % options.port)
  print('Type <Ctrl-C> to stop the server')
  server.serve_forever()
